# Digital Twin Platform Environment Configuration

# Application
ENVIRONMENT=development
PORT=8000
DEBUG=true

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/digital_twin
REDIS_URL=redis://localhost:6379/0

# MQTT Broker
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=digital-twin-platform

# Security
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# External Services
OPENAI_API_KEY=your-openai-api-key
OPENAI_API_BASE=https://api.openai.com/v1

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# ML Model Configuration
ML_MODEL_PATH=./ml/models/
ML_INFERENCE_INTERVAL=300
ML_RETRAIN_INTERVAL=86400

# Notification Settings
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
SMS_API_KEY=
SMS_API_URL=

